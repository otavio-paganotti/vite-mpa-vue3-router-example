{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Vite App",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/packages",
      "sourceMapPathOverrides": {
        "webpack:///./packages/*": "${webRoot}/*",
        "chrome-error://chromewebdata/*": "${webRoot}/*"
      },
      "sourceMaps": true,
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ]
}
